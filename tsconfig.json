// For more information about the typescript config options for the compiler,
// visit: https://angular.io/docs/ts/latest/guide/typescript-configuration.html

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },

  "exclude": [
    "node_modules/*"
  ]
}
